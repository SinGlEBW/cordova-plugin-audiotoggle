<?xml version="1.0" encoding="UTF-8"?>
<plugin 
   xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android"
   id="cordova-plugin-audiotoggle" version="1.2.8">

  <name>AudioToggle</name>
  <description>Toggle between speaker and earpiece when playing audio</description>
  <license>Apache</license>

  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <js-module src="www/audiotoggle.js" name="AudioToggle">
    <clobbers target="AudioToggle" />
  </js-module>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="AudioTogglePlugin">
        <param name="ios-package" value="AudioTogglePlugin" />
      </feature>
    </config-file>

    <header-file src="src/ios/AudioTogglePlugin.h" />
    <source-file src="src/ios/AudioTogglePlugin.m" />

    <framework src="AVFoundation.framework" />
    <framework src="AudioToolbox.framework" />
  </platform>

  <platform name="android">
    
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="AudioTogglePlugin">
        <param name="android-package" value="ru.cordova.android.audiotoggle.AudioTogglePlugin" />
      </feature>
    </config-file>
    
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    </config-file>

    <source-file src="src/android/AudioTogglePlugin.java" target-dir="src/ru/cordova/android/audiotoggle" />
  </platform>
</plugin>
